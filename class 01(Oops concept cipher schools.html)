class A:
  def __call__(self):
    print("You called me")
a = A()
type(a)
a()
     
You called me

a = {"name": "harsha"}
a["name"]
     
'harsha'

class Exponent:
  def __init__(self, n):
    self.n = n
  
  def __getitem__(self, x):
    return x ** self.n

e = Exponent(3)
e[6]
     
216
class Dog:

  tricks = []
  def __init__(self, name):
    self.name = name
  
  def add_trick(self, trick):
    self.tricks.append(trick)

d1 = Dog("Bruno")
d1.add_trick("fetch")
d1.add_trick("walk")
d1.tricks
     
['fetch', 'walk']

d2 = Dog("Maxx")
d2.tricks
     
['fetch', 'walk']
